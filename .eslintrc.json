{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "max-len": [
            "error",
            { "code": 125, "comments": 150, "ignoreUrls": true }
        ],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": 0
    }
}
